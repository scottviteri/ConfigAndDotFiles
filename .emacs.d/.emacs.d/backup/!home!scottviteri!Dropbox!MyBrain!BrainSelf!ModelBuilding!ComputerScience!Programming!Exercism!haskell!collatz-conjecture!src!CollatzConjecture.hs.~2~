module CollatzConjecture (collatz) where

collatz :: Integer -> Maybe Integer
collatz start
    | start <= 0 = Nothing
    | otherwise = Just (snd (collatzHelper start 0))


collatzHelper :: Integer -> Integer -> (Integer, Integer)
collatzHelper n count
    | n == 1 = (n, count)
    | isEven = collatzHelper (div n 2) (count+1)
    | otherwise = collatzHelper (3*n+1) (count+1)
    where isEven = (mod n 2 == 0)
